<h1 class="text-center mt-4">Create a new category</h1>

<div class="container">
        
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors' , obj: @category %>

            <%= form_with(model: @category, local: true, data: { turbo: false }, class: "shadow p-3 mb-3 bg-info rounded") do |f| %>
                <div class="row mt-3">
                    <%= f.label "Category Name", class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <%= f.submit class: "btn btn-outline-light" %>
                </div>
            <% end %>
        </div>
            
    </div>
    

    <p class="text-center">
        <%= link_to 'Back', articles_path, class: "text-info" %>
    </p>
</div>