<div>
    <h1 class="text-center mt-4">
        Categories
    </h1>

    <div class="flickr_pagination">
        <%= will_paginate @categories, :container => false %>
    </div>

    <div class="container">
        <% @categories.each do |category| %>
            <div class="row justify-content-center">
                <div class="col-8 mt-4">
                    <div class="card text-center shadow mb-5 bg-white rounded">
                        <div class="card-header">
                            
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= link_to category.name, category_path(category), class:"text-success" %>
                            </h5>
                            <p class="card-text"><%= truncate(category.name, length: 100) %></p>
                            <%= link_to "View", category_path(category), class: "btn btn-outline-success" %>

                        </div>
                        <div class="card-footer text-muted">
                            Created <%= time_ago_in_words(category.created_at) %> ago,
                            edited <%= time_ago_in_words(category.updated_at) %> ago
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>

    <div class="flickr_pagination">
        <%= will_paginate @categories, :container => false %>
    </div>
</div>