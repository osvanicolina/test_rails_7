<div class="container">
    <% flash.each do |name, message| %>
        <% if name == "notice" %>
            <div class="alert alert-success alert-dismissible fade show text-start <%= name %>" role="success">
                <%= message %>

                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% elsif name == "alert" %>
            <div class="alert alert-danger alert-dismissible fade show text-start <%= name %>" role="alert">
                <%= message %>

                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% end %>
    <% end %>
</div>    
    