<div class="container">
        
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @article %>

            <%= form_with(model: @article, local: true, data: { turbo: false }, class: "shadow p-3 mb-3 bg-info rounded") do |f| %>
                <div class="row mt-3">
                    <%= f.label :title, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
                    </div>
                </div>

                <div class="row mt-3">
                    <%= f.label :description, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 10, class: "form-control  shadow rounded", placeholder: "Description of article" %>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <%= f.submit class: "btn btn-outline-light" %>
                </div>
            <% end %>
        </div>
            
    </div>
    

    <p>
        <%= link_to 'Back', articles_path, class: "text-info" %>
    </p>
</div>    
    