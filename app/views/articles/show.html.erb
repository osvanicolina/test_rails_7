<div class="bg-light h-100">    
    <h1 class="mt-4 text-center">
        <%= @article.title %>
    </h1>

    <div class="container">

        <div class="row justify-content-center">
            <div class="col-8 mt-4">
                <div class="card text-center shadow mb-5 bg-white rounded">
                    <div class="card-header">
                        <i>By <%= @article.user.username if @article.user %> </i>
                        <%= link_to gravatar_for(@article.user), @article.user %>

                        <% if @article.categories.any? %>
                            <div class="mt-2">
                                <%= render @article.categories %>
                            </div>
                        <% end %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                        </h5>
                        <div class="card-text text-start">
                            <%= simple_format(@article.description) %>
                        </div>
                        <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
                            <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
                            <%= link_to 'Delete', article_path(@article), class: "btn btn-outline-danger", data: { turbo_confirm: "Are you sure?", turbo_method: :delete } %>
                        <% end %>
                    </div>
                    <div class="card-footer text-muted">
                        Created <%= time_ago_in_words(@article.created_at) %> ago,
                        edited <%= time_ago_in_words(@article.updated_at) %> ago
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
