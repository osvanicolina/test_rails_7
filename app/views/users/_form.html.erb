<div class="container">
        
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors' , obj: @user %>

            <%= form_with(model: @user, local: true, data: { turbo: false }, class: "shadow p-3 mb-3 bg-info rounded") do |f| %>
                <div class="row mt-3">
                    <%= f.label :username, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
                    </div>
                </div>

                <div class="row mt-3">
                    <%= f.label :email, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.email_field :email, class: "form-control  shadow rounded", placeholder: "Enter your email" %>
                    </div>
                </div>

                <div class="row mt-3">
                    <%= f.label :password, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.password_field :password, class: "form-control  shadow rounded", placeholder: "Enter your password" %>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <%= f.submit "Sign up", class: "btn btn-outline-light" %>
                </div>
            <% end %>
        </div>
            
    </div>
    

    <p>
        <%= link_to 'Back', articles_path, class: "text-info" %>
    </p>
</div>