<div>
    <h1 class="text-center mt-4">
        Alpha Bloggers
    </h1>

    <div class="flickr_pagination">
        <%= will_paginate @user, :container => false %>
    </div>

    <div class="container">
        <% @users.each do |user| %>
            <div class="row justify-content-center">
                <div class="col-8 mt-4">
                    <div class="card text-center shadow mb-5 bg-white rounded">
                        <div class="card-header">
                            <i>By <%= link_to user.username, user %> </i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= link_to gravatar_for(user, size: 150), user %>
                            </h5>
                            <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
                            <%= link_to "View", user, class: "btn btn-outline-success" %>
                            
                            <% if logged_in? %> 
                                <% if current_user == user %>
                                    <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-info" %>
                                <% end %>
                                <% if current_user.admin? %>
                                    <%= link_to "Delete user", user_path(user), class: "btn btn-outline-danger", data: { turbo_confirm: "Are you sure?", turbo_method: :delete } %>
                                <% end %>
                            <% end %>
                        </div>
                        <div class="card-footer text-muted">
                            Joined <%= time_ago_in_words(user.created_at) %> ago
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>

    <div class="flickr_pagination mb-4">
        <%= will_paginate @user, :container => false %>
    </div>
</div>  