<div class="text-center py-4">
    <h1>
        <%= @user.username %>'s profile
    </h1>

    <%= gravatar_for @user, size: 200 %>

    <div class="mt-4">
        <%= link_to "Edit profile", edit_user_path(@user), class: "btn btn-outline-info" %>
    </div>
    
    <% if @user.articles.count > 0 %>
        <h3 class="mt-4">
            Articles
        </h3>

        <%= render 'articles/article' %>
    <% end %>
</div>   